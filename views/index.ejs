<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/style.css" charset="utf-8" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <title>Movie Tracker</title>
  </head>
  <%- include ('./partials/header.ejs') %>
  <body class="bg-danger">
    <%- include ('./partials/nav.ejs') %>
    <div class="text-center p-4 mb-2 text-white">
      <h3>Movies</h3>
    </div>
    <form class="p-0 mb-4 text-center" action="/new" method="GET">
      <input class="btn btn-secondary btn-sm text-white" type="submit" value="ADD MOVIE">
    </form>
    <div class="text-center row">
      <% for (let i = 0; i < allMovies.length; i++) { %>
        <div class="column">
          <a class="text-white" href="/<%=allMovies[i].id%>">
            <img src="<%=allMovies[i].imgUrl%>" alt="" width="300" height="400">
            <p><%=allMovies[i].title%> (<%=allMovies[i].year%>)</p>
          </a>
        </div>
      <% } %>
    </div>
    <table class="table table-hover table-secondary">
      <thead>
        <tr>
          <th scope="col">Year</th>
          <th scope="col">Title</th>
          <th scope="col">Watched</th>
          <th scope="col">Rating</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% for (let i = 0; i < allMovies.length; i++) { %>
          <tr>
            <th scope="row"><%=allMovies[i].year%></th>
            <td><a href="/<%=allMovies[i].id%>"><%=allMovies[i].title%></a></td>
            <td>
              <% if (allMovies[i].watched === true) { %>
                Yes
              <% } else { %>
                No
              <% }%>
            <td><%=allMovies[i].rating%></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
  <%- include ('./partials/footer.ejs') %>
</html>
