<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <title></title>
  </head>
  <%- include ('./partials/header.ejs') %>
  <body class="bg-danger">
    <%- include ('./partials/nav.ejs') %>
    <div class="text-center p-4 mb-2 text-white">
      <h3>TV Shows</h3>
    </div>
    <form class="p-0 mb-4 text-center" action="/tv/new" method="GET">
      <input class="btn btn-secondary btn-sm text-white" type="submit" value="ADD TV SHOW">
    </form>
    <table class="table table-hover table-secondary">
      <thead>
        <tr>
          <th scope="col">Year</th>
          <th scope="col">Title</th>
          <th scope="col">Watched</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < allTv.length; i++) { %>
          <tr>
            <th scope="row"><%=allTv[i].year%></th>
            <td><a href="/tv/<%=allTv[i].id%>"><%=allTv[i].title%></a></td>
            <td>
              <% if (allTv[i].watched === true) { %>
                Yes
              <% } else { %>
                No
              <% }%>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
